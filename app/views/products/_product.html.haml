%h2.product_title{'data-product-id' => product.id}
  =image_tag product.image_url, 'data-product-id' => product.id, :class => 'images'
  =product.title
  =sanitize(product.description)
.price_line
  %a
    .add_to_cart{ :class => "btn btn-primary btn-large", :remote => 'true', 'data-product-id' => product.id} Add to Cart
  %span.price
    = number_to_currency product.price